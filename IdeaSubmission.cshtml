        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card campaignBox">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="formShow2" id="form1">
                                    <form>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">

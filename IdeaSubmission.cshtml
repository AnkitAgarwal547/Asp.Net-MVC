@model ViewModel.ViewModel_CampaignIdeaSubmission
@{
    ViewBag.Title = "Idea Submission";
    Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";
}
<style type="text/css">
    .form-control {
